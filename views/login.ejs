<%- include('partials/login-header.ejs') %>
    <div class="container">
        <div class="login-container">
            <div class="form">
                <form action="/login" method="post">
                    <input type="email" name="email" placeholder="Enter your email" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <% if(locals.error){%>
                        <span style="color: red; font-size: smaller;"><%= error %></span>
                    <% } %>
                    <button type="submit">Login</button>
                </form>
            </div>
            <div class="google-oauth">
                <a href="/auth/google"><i class="fa-brands fa-google"></i> Sign in with google</a>
            </div>
            <div class="link">
                <p>Don't have an account? <a href="/sign-up">Open a new one</a></p>
            </div>
            <div class="forgot-password">
                <a href="">Forgot Password</a>
            </div>
        </div>
    </div>
</body>
</html>