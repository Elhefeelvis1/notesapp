<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/list.css">
    <title>My Lists</title>
</head>
<body>
    <main>
        <div class="container">
        <% if(locals.id){ %>
            <div class="edit-form">
                <form action="/update" method="post" class="update">
                    <input type="hidden" id="editId" name="editId" value="<%= id %>">
                    <label for="editContent">Title</label>
                    <input type="text" id="editTitle" name="editTitle" value="<%= title %>">
                    <label for="editContent">Content</label>
                    <textarea name="editContent" id="editContent" rows="20"><%= content %></textarea>
                    <div class="checkboxes">
                        <div class="favourites">
                            <input type="checkbox" id="favourites" name="favourites" <%= favourite == 'true' ? "checked" : '' %>>
                            <label for="favourites">Favourite</label>
                        </div>
                        <div class="uncompleted">
                            <input type="checkbox" id="uncompleted" name="uncompleted" <%= uncompleted == 'true' ? "checked" : '' %>>
                            <label for="uncompleted">Uncompleted</label>
                        </div>
                    </div>
                    <button type="submit">Update</button>
                </form>
            </div>
        <% } %>
        <% if(!locals.id) { %>
            <div class="edit-form add-new">
                <form action="/addNew" method="post" class="add-new">
                    <input type="hidden" name="userId" value="<%= user %>">
                    <div class="checkboxes">
                        <div class="favourites">
                            <label for="favourites">Favourite</label>
                            <input type="checkbox" id="favourites" name="favourites">
                        </div>
                        <div class="uncompleted">
                            <label for="uncompleted">Uncompleted</label>
                            <input type="checkbox" id="uncompleted" name="uncompleted">
                        </div>
                    </div>
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title">
                    <label for="content">Content</label>
                    <textarea name="content" id="content" rows="20"></textarea>
    
                    <button type="submit">Add new</button>
                </form>
            </div>
        <% } %>
        </div>
    </main>
</body>
</html>